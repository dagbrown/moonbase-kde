          MODULE=kdiff
         VERSION=1.9.4
          SOURCE=${MODULE}3-$VERSION.tar.xz
      SOURCE_URL=$KDE_URL/stable/${MODULE}3
SOURCE_DIRECTORY=$BUILD_DIRECTORY/${MODULE}3-$VERSION
