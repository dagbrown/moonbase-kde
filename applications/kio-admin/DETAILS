          MODULE=kio-admin
         VERSION=24.08.2
          SOURCE=$MODULE-$VERSION.tar.xz
      SOURCE_URL=$KDE_URL/stable/release-service/$VERSION/src/
      SOURCE_VFY=sha256:f7e0529199a161a6b3d329f037b01486e959c5ee837b9deb85d0c7cf1f187263
